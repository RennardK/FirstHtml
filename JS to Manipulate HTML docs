<!-- script.js
function myFunc()
  {
        document.getElementById("motor").innerHTML="This is my JavaScript script."
  }
  
function myFunc1()
  {
        document.getElementById("motor").style.fontSize="25px";
  }
function myFunc2()
  {
        document.getElementById("motor").style.color="tomato";
  }
function myFunc3()
  {
        document.getElementById("motor").style.display="none";
  }
-->
